<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/lib/com.app.chasebank"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <!--暂时用button代替多选对话框和时间日期组件-->
    <ScrollView

        android:id="@+id/scrollView1"

        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:orientation="vertical">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="请假条"
                    android:textColor="#000000"
                    android:textSize="25dip"/>


            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <!--<ListView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_weight="1"-->
                <!--/>-->
                <TextView
                    android:id="@+id/apply_person"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:hint="申请人"/>

                <TextView
                    android:id="@+id/niyu"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="拟于"
                    android:textColor="#000000"
                    />
            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:hint="开始时间"/>

                <TextView
                    android:id="@+id/zhi"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="至"
                    android:textColor="#000000"/>


            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">


                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center"
                    android:hint="截止时间"/>


            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/dao"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"

                    android:layout_weight="2"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="到"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/place"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="8"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="地点"/>

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/banli"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"

                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="办理"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/event"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="6"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="事件"/>

                <TextView
                    android:id="@+id/shiyi"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="事宜"
                    android:textColor="#000000"/>


            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="40dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/qingpizhun"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="请批准!"
                    android:textColor="#000000"/>

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/shenqingren"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"

                    android:gravity="left"
                    android:padding="10dp"
                    android:text="申请人："
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/real_apply_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"

                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="申请人"/>


            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/shenqingshijian"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"

                    android:gravity="left"
                    android:padding="10dp"
                    android:text="申请时间："
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/apply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:hint="申请时间"/>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:gravity="center_vertical">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/agree_or_refuse"
                    android:gravity="left"
                    android:padding="10dp"></Spinner>

                <EditText
                    android:id="@+id/reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"

                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="拒绝时填原因"/>


            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/pizhunren"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"

                    android:gravity="left"
                    android:padding="10dp"
                    android:text="批准人："
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/permit_person"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center"
                    android:hint="批准人"/>


            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/pizhunshijian"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="批准时间："
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/permit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center"
                    android:hint="批准时间"/>

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/kong"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_weight="9"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text=""/>

                <Button
                    android:id="@+id/leave_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="提交"/>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>